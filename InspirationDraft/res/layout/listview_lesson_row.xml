<?xml version="1.0" encoding="utf-8"?>    
<com.example.inspirationdraft.CheckableLinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">    
    
    <TextView android:id="@+id/txtLessonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <CheckedTextView android:id="@+id/txtLessonTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checkMark="?android:attr/listChoiceIndicatorSingle" 
	        />
    
	<LinearLayout 
	    android:orientation="horizontal" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
       
	     <ImageView android:id="@+id/imgLessonIcon"
	        android:contentDescription="@string/inspirationImage_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"/>
       
	     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:text="@string/labelLessonAssignments"/>
	     	     
	     <TextView android:id="@+id/txtLessonAssignments"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"/>
	     
	</LinearLayout>
       
</com.example.inspirationdraft.CheckableLinearLayout>